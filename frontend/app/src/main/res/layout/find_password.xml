<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_findpw_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/mulish_bold"
        android:gravity="center"
        android:text="비밀번호 찾기"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/tv_email_4"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish_extrabold"
        android:text="EMAIL"
        android:textColor="#323F4B"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/Comfirm_email"
        android:layout_width="316dp"
        android:layout_height="56dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/mulish_semibold"
        android:hint="⠀name@email.com"
        android:inputType="textEmailAddress"
        android:textColor="#7B8794" />

    <Button
        android:id="@+id/Btn_send_email"
        android:layout_width="316dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/radius_btn"
        android:fontFamily="@font/mulish_bold"
        android:text="비밀번호 초기화 이메일 전송" />

    <Button
        android:id="@+id/Btn_main"
        android:layout_width="316dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/dm_sans"
        android:text="취소"
        android:textColor="#BFCCD9"
        android:textSize="18dp"
        android:stateListAnimator="@null"/>

</LinearLayout>