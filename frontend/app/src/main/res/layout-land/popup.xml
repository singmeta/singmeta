<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="395dp"
    android:layout_height="165dp"
    android:background="@drawable/popup"
    android:layout_gravity="center"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tv_Room_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="134dp"
        android:fontFamily="@font/mulish_extrabold"

        android:gravity="center"
        android:text="비밀번호"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Room_password1"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"

        android:ems="10"
        android:inputType="numberPassword"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Room_password2"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"

        android:ems="10"
        android:inputType="numberPassword"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Room_password1" />

    <EditText
        android:id="@+id/Room_password3"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"

        android:ems="10"
        android:inputType="numberPassword"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Room_password2" />

    <EditText
        android:id="@+id/Room_password4"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"

        android:ems="10"
        android:inputType="numberPassword"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Room_password3" />
</androidx.constraintlayout.widget.ConstraintLayout>

