<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <TextView
        android:id="@+id/tv_RoomSet"
        android:layout_width="299dp"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/mulish_bold"
        android:gravity="center"
        android:text="노래방 환경을 설정해주세요"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#3E314F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/tv_RoomTitle"
        android:layout_width="389dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/mulish_extrabold"
        android:gravity="bottom"
        android:text="노래방 제목"
        android:textColor="#323F4B"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_RoomSet" />

    <EditText
        android:id="@+id/edt_RoomTitle"
        android:layout_width="397dp"
        android:layout_height="48dp"

        android:layout_marginTop="4dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/mulish_semibold"
        android:hint="⠀OO의 노래방"
        android:inputType="textEmailAddress"
        android:textColor="#7B8794"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_RoomTitle" />

    <Spinner
        android:id="@+id/sp_people"
        android:layout_width="397dp"
        android:layout_height="48dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/mulish_semibold"
        android:textColor="#7B8794"
        app:layout_constraintBottom_toTopOf="@+id/tv_Password_set"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Entry"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_Notice"
        android:layout_width="306dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom"
        android:text="해당 테마의 최대 허용인원은 8명 입니다."
        app:layout_constraintBottom_toTopOf="@+id/sp_people"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_Entry"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_Entry"
        android:layout_width="68dp"
        android:layout_height="28dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/mulish_extrabold"
        android:gravity="bottom"
        android:text="참가인원"
        android:textColor="#323F4B"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_Password"
        android:layout_width="397dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/mulish_semibold"
        android:hint="⠀"
        android:inputType="textEmailAddress"
        android:textColor="#7B8794"
        app:layout_constraintBottom_toTopOf="@+id/Btn_room_finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Password_set"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_Password_set"
        android:layout_width="408dp"
        android:layout_height="28dp"
        android:fontFamily="@font/mulish_extrabold"
        android:gravity="bottom"
        android:text="비밀번호 설정"
        android:textColor="#323F4B"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/edt_Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_people" />

    <Button
        android:id="@+id/Btn_room_finish"
        android:layout_width="405dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#292D4C"
        android:fontFamily="@font/mulish_bold"
        android:text="완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Btn_back"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="347dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/mulish_bold"
        android:text="뒤로가기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/Btn_room_finish"
        android:backgroundTint="#292D4C"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>